<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lainnya"
    tools:context=".Login">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#afffffff"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        android:layout_centerInParent="true"
        android:layout_margin="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/logo"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="Aplikasi Kajian Islam"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_nama"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_margin="20dp"
                android:textColorHint="@color/black_secondaryText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukkan Email"
                    android:inputType="text"
                    android:textColor="@color/black_primaryText"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nama"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColorHint="@color/black_secondaryText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukkan Kata Sandi"
                    android:inputType="textPassword"
                    android:textColor="@color/black_primaryText"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pass"
                android:layout_margin="20dp"
                android:background="@drawable/bg_btn"
                android:text="Masuk"
                android:textColor="@color/white_primaryText"/>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login"
                android:text="Daftar"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>