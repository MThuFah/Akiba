<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gambar"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#82000000"></View>

            <TextView
                android:id="@+id/tv_judulKajian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Judul Kajian"
                android:textAlignment="center"
                android:textColor="@color/white_primaryText"
                android:textStyle="bold|italic"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_pemateriKajian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_judulKajian"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Ust. ......................."
                android:textAlignment="center"
                android:textColor="@color/white_primaryText"
                android:textSize="16dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_hari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sen"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/tv_tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/tv_bulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:fontFamily="serif"/>

            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorAccent"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_tempatKajian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masjid Nurul Yasin"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_alamatKajian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BTN Graha Kalegowa Blok D4 nomor 9, RT 02 RW 02"
                    android:textColor="@color/black_secondaryText"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_waktuKajian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:textColor="@color/black_secondaryText"
                    android:textStyle="bold"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>